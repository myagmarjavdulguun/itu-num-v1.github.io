#include <iostream>
#include <string.h>
#include <vector>
using namespace std;

class Student {
protected:
    char fName[20];
    char lName[20];
    char sisiID[15];
    char school[20];
public:
    Student(char a[]="Bat", char b[]="Dorj", char c[]="00b1num0000", char d[]="seas") {
        strcpy(fName, a);
        strcpy(lName, b);
        strcpy(sisiID, c);
        strcpy(school, d);
    }
    char* getfName() {
        return fName;
    }
    char* getlName() {
        return lName;
    }
    char* getsisiID() {
        return sisiID;
    }
    char* getschool() {
        return school;
    }
    void setfName(char* a) {
        strcpy(fName, a);
    }
    void setlName(char* a) {
        strcpy(lName, a);
    }
    void setsisiID(char* a) {
        strcpy(sisiID, a);
    }
    void setschool(char* a) {
        strcpy(school, a);
    }
};

class Lecturer {
protected:
    char fName[20];
    char lName[20];
    char lecID[15];
public:
    Lecturer(char a[]="Bat", char b[]="Dorj", char c[]="00lec000") {
        strcpy(fName, a);
        strcpy(lName, b);
        strcpy(lecID, c);
    }
    char* getfName() {
        return fName;
    }
    char* getlName() {
        return lName;
    }
    char* getlecID() {
        return lecID;
    }
    void setfName(char* a) {
        strcpy(fName, a);
    }
    void setlName(char* a) {
        strcpy(lName, a);
    }
    void setlecID(char* a) {
        strcpy(lecID, a);
    }
};

class Course {
protected:
    char courseName[20];
    char courseID[20];
    char topics[16][30];
    int credit;
public:
    Course(char a[]="Hicheel", char b[]="00b100", char c[]="sedev", int d=3) {
        strcpy(courseName, a);
        strcpy(courseID, b);
        for(int i=0; i<16; i++) {
            strcpy(topics[i], c);
        }
        credit = d;
    }
    char* getcourseName() {
        return courseName;
    }
    char* getcourseID() {
        return courseID;
    }
    char* gettopics(int i) {
        return topics[i-1];
    }
    int getcredit() {
        return credit;
    }
    void setcourseName(char* a) {
        strcpy(courseName, a);
    }
    void setcourseID(char* a) {
        strcpy(courseID, a);
    }
    void settopics(int i, char* a) {
        strcpy(topics[i-1], a);
    }
    void setcredit(int a) {
        credit = a<=3 ? a : credit;
    }
};

class Studying {
protected:
    Course hicheel;
    int groupNo;
    int oyutniiToo;
    int doorNo;
    Student oyutan[100];
    vector<Lecturer> labbagsh;
    Lecturer lekbagsh;
    char irts[2][4][100][18][20];
    int labtoo[4];
public:
    Studying(char c[][20], char a[]="Hicheel", char b[]="csi100", int d=3, int e=1, int f=100) {
        oyutniiToo = 0;
        hicheel.setcourseName(a);
        hicheel.setcourseID(b);
        for(int i=0; i<16; i++) {
            hicheel.settopics(i, c[i]);
        }
        hicheel.setcredit(d);
        groupNo = e;
        doorNo = f;
        labtoo[0] = 0; labtoo[1] = 0; labtoo[2] = 0; labtoo[3] = 0;
    }
    void addLec(char* a, char* b, char* c) {
        lekbagsh.setfName(a);
        lekbagsh.setlName(b);
        lekbagsh.setlecID(c);
    }
    void addLab(char* a, char* b, char* c) {
        if(labbagsh.size() < groupNo) {
            Lecturer bagsh(a,b,c);
            labbagsh.push_back(bagsh);
        }
    }
    void addStudent(char* a, char* b, char* c, char* d, int e) {
        oyutan[oyutniiToo].setfName(a);
        oyutan[oyutniiToo].setlName(b);
        oyutan[oyutniiToo].setsisiID(c);
        oyutan[oyutniiToo].setschool(d);
        strcpy(irts[0][0][oyutniiToo][0], c);
        strcpy(irts[0][0][oyutniiToo][1], "idevhtei");
        strcpy(irts[1][e-1][labtoo[e-1]][0], c);
        strcpy(irts[1][e-1][labtoo[e-1]][1], "idevhtei");
        oyutniiToo++;
        labtoo[e-1]++;
    }
    void removeStudent(char* a) {
        for(int i=0; i<oyutniiToo; i++) {
            if(strcmp(irts[0][0][i][0], a)) {
                strcpy(irts[0][0][i][1], "idevhgui");
            }
        }
        for(int i=0; i<4; i++) {
            for(int j=0; j<labtoo[i]; j++) {
                if(strcmp(irts[1][i][j][0], a)) {
                    strcpy(irts[1][i][j][1], "idevhgui");
                }
            }
        }
    }
    void getstudentID(char a[][20]) {
        for(int i=0, j=0; i<oyutniiToo; i++) {
            if(strcmp(irts[0][0][i][1], "idevhtei")) {
                strcpy(a[j], irts[0][0][i][0]);
                j++;
            }
        }
    }
    void getLabStudentID(char a[][20], int b) {
        for(int i=0, j=0; i<labtoo[b-1]; i++) {
            if(strcmp(irts[1][b-1][i][1], "idevhtei")) {
                strcpy(a[j], irts[1][b-1][i][0]);
                j++;
            }
        }
    }
    void lecirts(char a[][1], int b) {
        for(int i=0, j=0; i<oyutniiToo; i++) {
            if(strcmp(irts[0][0][i][1], "idevhtei")) {
                strcpy(irts[0][0][i][b+1], a[j]);
                j++;
            }
        }
    }
    void labirts(char a[][1], int b, int c) {
        for(int i=0, j=0; i<labtoo[c-1]; i++) {
            if(strcmp(irts[1][c-1][i][1], "idevhtei")) {
                strcpy(irts[1][c-1][i][b+1], a[j]);
                j++;
            }
        }
    }
    void printLecIrts() {
        cout << "Lektsiing bagsh:" << lekbagsh.getfName();
        cout << " " << lekbagsh.getlName() << endl;
        for(int i=0; i<oyutniiToo; i++) {
            if(strcmp(irts[0][0][i][1], "idevhtei")) {
                for(int j=0; j<17; j++) {
                    cout << irts[0][0][i][j] << " ";
                }
                cout << endl;
            }
        }
    }
    void printLabIrts(int a) {
        cout << "Laboratoriin bagsh:" << labbagsh[a-1].getfName();
        cout << " " << labbagsh[a-1].getlName() << endl;
        for(int i=0; i<labtoo[a-1]; i++) {
            if(strcmp(irts[1][a-1][i][1], "idevhtei")) {
                for(int j=0; j<17; j++) {
                    cout << irts[1][a-1][i][j] << " ";
                }
                cout << endl;
            }
        }
    }
};


